<?xml version="1.0" encoding="utf-8"?>
<!--
  ~ LCR 三声道调试界面布局
  -->

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- 标题 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LCR 三声道调试播放器"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="12dp" />

        <!-- ========== 文件选择区域 ========== -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="音频文件选择"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <!-- Left 声道 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="6dp"
                    android:padding="8dp"
                    android:background="@drawable/lcr_channel_bg">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Left"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@android:color/holo_blue_dark"
                            android:layout_marginEnd="8dp" />

                        <Button
                            android:id="@+id/lcr_left_select"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="选择"
                            android:textSize="12sp"
                            android:textAllCaps="false"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                        <Button
                            android:id="@+id/lcr_left_clear"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="清除"
                            android:textSize="12sp"
                            android:textAllCaps="false"
                            android:enabled="false"
                            android:layout_marginStart="4dp"
                            style="@style/Widget.MaterialComponents.Button.TextButton" />

                        <Button
                            android:id="@+id/lcr_left_invert"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="INVERT"
                            android:textSize="11sp"
                            android:enabled="false"
                            android:layout_marginStart="4dp"
                            style="@style/Widget.MaterialComponents.Button.TextButton" />
                    </LinearLayout>

                    <!-- 文件名显示 -->
                    <LinearLayout
                        android:id="@+id/lcr_left_file_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/ic_check_circle"
                            android:layout_marginEnd="4dp" />

                        <TextView
                            android:id="@+id/lcr_left_file_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@android:color/holo_green_dark"
                            android:textSize="11sp"
                            android:ellipsize="middle"
                            android:singleLine="true" />

                        <TextView
                            android:id="@+id/lcr_left_duration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11sp"
                            android:layout_marginStart="4dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/lcr_left_placeholder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="未选择文件"
                        android:textColor="?android:textColorSecondary"
                        android:textSize="11sp" />
                </LinearLayout>

                <!-- Center 声道 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="6dp"
                    android:padding="8dp"
                    android:background="@drawable/lcr_channel_bg">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Center"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@android:color/holo_orange_dark"
                            android:layout_marginEnd="8dp" />

                        <Button
                            android:id="@+id/lcr_center_select"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="选择"
                            android:textSize="12sp"
                            android:textAllCaps="false"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                        <Button
                            android:id="@+id/lcr_center_clear"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="清除"
                            android:textSize="12sp"
                            android:textAllCaps="false"
                            android:enabled="false"
                            android:layout_marginStart="4dp"
                            style="@style/Widget.MaterialComponents.Button.TextButton" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lcr_center_file_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/ic_check_circle"
                            android:layout_marginEnd="4dp" />

                        <TextView
                            android:id="@+id/lcr_center_file_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@android:color/holo_green_dark"
                            android:textSize="11sp"
                            android:ellipsize="middle"
                            android:singleLine="true" />

                        <TextView
                            android:id="@+id/lcr_center_duration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11sp"
                            android:layout_marginStart="4dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/lcr_center_placeholder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="未选择文件"
                        android:textColor="?android:textColorSecondary"
                        android:textSize="11sp" />
                </LinearLayout>

                <!-- Right 声道 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:background="@drawable/lcr_channel_bg">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Right"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@android:color/holo_red_dark"
                            android:layout_marginEnd="8dp" />

                        <Button
                            android:id="@+id/lcr_right_select"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="选择"
                            android:textSize="12sp"
                            android:textAllCaps="false"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                        <Button
                            android:id="@+id/lcr_right_clear"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="清除"
                            android:textSize="12sp"
                            android:textAllCaps="false"
                            android:enabled="false"
                            android:layout_marginStart="4dp"
                            style="@style/Widget.MaterialComponents.Button.TextButton" />

                        <Button
                            android:id="@+id/lcr_right_invert"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="INVERT"
                            android:textSize="11sp"
                            android:enabled="false"
                            android:layout_marginStart="4dp"
                            style="@style/Widget.MaterialComponents.Button.TextButton" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lcr_right_file_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/ic_check_circle"
                            android:layout_marginEnd="4dp" />

                        <TextView
                            android:id="@+id/lcr_right_file_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@android:color/holo_green_dark"
                            android:textSize="11sp"
                            android:ellipsize="middle"
                            android:singleLine="true" />

                        <TextView
                            android:id="@+id/lcr_right_duration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11sp"
                            android:layout_marginStart="4dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/lcr_right_placeholder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="未选择文件"
                        android:textColor="?android:textColorSecondary"
                        android:textSize="11sp" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ========== 播放模式 + Switch ========== -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="播放模式"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <RadioGroup
                    android:id="@+id/lcr_mode_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/lcr_mode_separate"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="Separate"
                        android:textSize="12sp"
                        android:checked="true" />

                    <RadioButton
                        android:id="@+id/lcr_mode_left"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="L"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/lcr_mode_right"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="R"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/lcr_mode_center"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="C"
                        android:textSize="12sp" />
                </RadioGroup>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <Button
                        android:id="@+id/lcr_switch_button"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="Switch"
                        android:textSize="12sp"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                    <TextView
                        android:id="@+id/lcr_switch_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(正常)"
                        android:textSize="12sp"
                        android:textColor="@android:color/holo_green_dark"
                        android:layout_marginStart="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="← 左右耳声道互换"
                        android:textSize="11sp"
                        android:textColor="?android:textColorSecondary"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ========== 播放控制 ========== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/lcr_play_button"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="播放"
                android:textSize="14sp"
                android:layout_marginEnd="16dp" />

            <Button
                android:id="@+id/lcr_stop_button"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="停止"
                android:textSize="14sp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
        </LinearLayout>

        <!-- ========== 音量控制 ========== -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="音量"
                        android:textStyle="bold"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/lcr_volume_reset"
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:text="重置"
                        android:textSize="10sp"
                        android:textAllCaps="false"
                        style="@style/Widget.MaterialComponents.Button.TextButton" />
                </LinearLayout>

                <!-- Left -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="L:"
                        android:textSize="12sp" />

                    <SeekBar
                        android:id="@+id/lcr_volume_left"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="100" />

                    <TextView
                        android:id="@+id/lcr_volume_left_text"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="100%"
                        android:textSize="11sp"
                        android:gravity="end" />
                </LinearLayout>

                <!-- Center -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="C:"
                        android:textSize="12sp" />

                    <SeekBar
                        android:id="@+id/lcr_volume_center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="100" />

                    <TextView
                        android:id="@+id/lcr_volume_center_text"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="100%"
                        android:textSize="11sp"
                        android:gravity="end" />
                </LinearLayout>

                <!-- Right -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="R:"
                        android:textSize="12sp" />

                    <SeekBar
                        android:id="@+id/lcr_volume_right"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="100" />

                    <TextView
                        android:id="@+id/lcr_volume_right_text"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="100%"
                        android:textSize="11sp"
                        android:gravity="end" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ========== 距离感控制 ========== -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="距离感 (远←→近)"
                        android:textStyle="bold"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/lcr_proximity_reset"
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:text="重置"
                        android:textSize="10sp"
                        android:textAllCaps="false"
                        style="@style/Widget.MaterialComponents.Button.TextButton" />
                </LinearLayout>

                <!-- Left -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:text="L:"
                        android:textSize="12sp" />

                    <SeekBar
                        android:id="@+id/lcr_proximity_left"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="50" />

                    <TextView
                        android:id="@+id/lcr_proximity_left_text"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="50%"
                        android:textSize="11sp"
                        android:gravity="end" />
                </LinearLayout>

                <!-- Center -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:text="C:"
                        android:textSize="12sp" />

                    <SeekBar
                        android:id="@+id/lcr_proximity_center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="50" />

                    <TextView
                        android:id="@+id/lcr_proximity_center_text"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="50%"
                        android:textSize="11sp"
                        android:gravity="end" />
                </LinearLayout>

                <!-- Right -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:text="R:"
                        android:textSize="12sp" />

                    <SeekBar
                        android:id="@+id/lcr_proximity_right"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="50" />

                    <TextView
                        android:id="@+id/lcr_proximity_right_text"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="50%"
                        android:textSize="11sp"
                        android:gravity="end" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ========== 播放进度 ========== -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="进度"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <SeekBar
                    android:id="@+id/lcr_progress_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="1000"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp" />

                <TextView
                    android:id="@+id/lcr_time_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="00:00 / 00:00"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ========== 倍速控制 ========== -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="播放速度"
                        android:textStyle="bold"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/lcr_speed_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.00x"
                        android:textSize="14sp"
                        android:textColor="@android:color/holo_blue_dark"
                        android:textStyle="bold"
                        android:layout_marginStart="8dp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <CheckBox
                        android:id="@+id/lcr_loop_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="循环播放"
                        android:textSize="12sp"
                        android:checked="true" />
                </LinearLayout>

                <!-- 快捷倍速按钮 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="6dp">

                    <Button
                        android:id="@+id/lcr_speed_1x"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:text="1x"
                        android:textSize="12sp"
                        android:textAllCaps="false"
                        android:layout_marginEnd="4dp"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                    <Button
                        android:id="@+id/lcr_speed_1_25x"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:text="1.25x"
                        android:textSize="12sp"
                        android:textAllCaps="false"
                        android:layout_marginEnd="4dp"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                    <Button
                        android:id="@+id/lcr_speed_1_5x"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:text="1.5x"
                        android:textSize="12sp"
                        android:textAllCaps="false"
                        android:layout_marginEnd="4dp"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                    <Button
                        android:id="@+id/lcr_speed_1_75x"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:text="1.75x"
                        android:textSize="12sp"
                        android:textAllCaps="false"
                        android:layout_marginEnd="4dp"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                    <Button
                        android:id="@+id/lcr_speed_2x"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:text="2x"
                        android:textSize="12sp"
                        android:textAllCaps="false"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
                </LinearLayout>

                <!-- 速度滑动条 (0.5 - 2.0) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:text="0.5x"
                        android:textSize="10sp"
                        android:gravity="center" />

                    <SeekBar
                        android:id="@+id/lcr_speed_seekbar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="150"
                        android:progress="50"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="wrap_content"
                        android:text="2x"
                        android:textSize="10sp"
                        android:gravity="center" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ========== 状态 ========== -->
        <TextView
            android:id="@+id/lcr_status_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="就绪"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="12sp"
            android:gravity="center"
            android:padding="8dp" />

        <!-- 底部空白，避免内容被截断 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="80dp" />

    </LinearLayout>
</ScrollView>
